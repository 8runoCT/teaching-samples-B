@page "/0701ActorsShow"

@using DSS.VanityFair;

<PageTitle>Actors</PageTitle>
<h1>Actors</h1>
<br />
<table>
    <th>
        <td>First name</td>
        <td>Last name</td>
        <td>IMDB score</td>
    </th>
    @foreach (Actor act in filmCrew)
    {
            <tr>
                <td>@act.FirstName</td>
                <td>@act.LastName</td>
                <td>@act.ImdbMark</td>
             </tr>
    }
</table>
<br/>
<button @onclick="AverageIMDB">Average IMDB</button>
<br />

